<div class="container">
   <div class="row">
     <div class="col-lg-4">
       <h2>User info</h2>

    <table class='table'>

      <%= attachment_image_tag @book.user, :profile_image, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg",size:'40x40' %>


      <tr>
        <th>name</th>
        <th><%= @book.user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @book.user.introduction %></th>
      </tr>
      <tr>
        <th><%= link_to "", edit_user_path(@book.user),class: "glyphicon glyphicon-wrench" %></th>
      </tr>
    </table>


<h2>New book</h2>

    <%= form_for(@booknew) do |f| %>
    <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
    </div>

    <div class="field">
    <%= f.label :Opinion %><br>
    <%= f.text_area :body %>
    </div>

    <%= f.submit 'Create Book' %>

    <% end %>
     </div>

     <div class="col-lg-8">
      <h2>Book detail</h2>
      <table class="table table">
  <thead>
  </thead>

  <tbody>
     <% if @book.user == current_user %>
      <td><%= attachment_image_tag @book.user, :profile_image, :fill, 40, 40, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg",size:'40x40' %>
        <br><%= link_to @book.user.name,user_path(@book.user) %>
        <%=link_to @book.title, book_path(@book.id) %>
      </td>
        <td><%= @book.body%></td>
        <td><%=link_to "Edit", edit_book_path(@book.id) %><td>
        <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？" %><td>
      </tr>
      <% else %>
      <td><%= attachment_image_tag @book.user, :profile_image, :fill, 40, 40, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg",size:'40x40' %><br>
        <br><%= link_to @book.user.name,user_path(@book.user) %>
        <%=link_to @book.title, book_path(@book.id) %>
      </td>
        <td><%= @book.body%></td>
        <% end %>
  </tbody>
</table>

     </div>
    </div>
   </div>

