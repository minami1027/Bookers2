<%= render 'devise/shared/error_messages', resource: @book %>

<h1>Editing Book</h1>

    <%= form_for(@book) do |f| %>
<div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
</div>

<div class="field">
    <%= f.label :Opinion %><br>
    <%= f.text_area :body %>
</div>

    <%= f.submit 'Update Book' %>

<% end %>

<%=link_to "Show", book_path(@book.id) %>|<%=link_to "Back", books_path(@book.id) %>