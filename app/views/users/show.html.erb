<div class="container">
   <div class="row">
     <div class="col-lg-4">
        <%= render 'users/list', user: @user, booknew: @booknew %>
     </div>

     <div class="col-lg-8">
     <h2>Books</h2>
<table class="table table">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>

  <tbody>
   <% @books.each do |book| %>
    <td><%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg",size:'40x40' %></td>
    <td><%=link_to book.title, book_path(book.id) %></td>
    <td><%= book.body%></td>

   </tr>
   <% end %>
  </tbody>
</table>

     </div>
    </div>
   </div>