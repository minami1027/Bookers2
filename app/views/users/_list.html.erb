<h2>User info</h2>

    <table class='table'>

      <%= attachment_image_tag user, :profile_image, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg",size:'40x40' %>


      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
      <tr>
        <th><%= link_to "", edit_user_path(current_user),class: "glyphicon glyphicon-wrench" %></th>
      </tr>
    </table>


<h2>New book</h2>

    <%= form_for(booknew) do |f| %>
    <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
    </div>

    <div class="field">
    <%= f.label :Opinion %><br>
    <%= f.text_area :body %>
    </div>

    <%= f.submit 'Create Book' %>

    <% end %>