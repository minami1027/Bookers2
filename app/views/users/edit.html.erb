<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= I18n.t("errors.messages.not_saved",
                 count: @user.errors.count,
                 resource: @user.class.model_name.human.downcase)
       %>
    </h2>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>



<h2>User info</h2>
<%= form_for(@user) do |f| %>
    <div class="form-group has-icon">
    	<label for="user_name">Name</label>
        <%= f.text_field :name, autofocus: true,placeholder:"名前"%>
    </div>
    <div class="form-group has-icon">
    	<label for="user_image">Image</label>
    <div class="user-edit-image">
    	<%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
    </div>

    <div class="form-group has-icon">
    	<label for="user_name">Introduction</label>
        <%= f.text_area :introduction, autofocus: true, placeholder:"名前"%>
    <label class="control-label sr-only">ProfileImage</label>
    <%= f.submit "Update User", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
    </div>
<% end %>