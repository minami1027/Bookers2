<div class="container">
   <div class="row">
     <div class="col-lg-4">
       <%= render 'users/list', user: @user, booknew: @booknew %>
     </div>

     <div class="col-lg-8">
      <h2>Users</h2>
<table class="table table">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
   <% @users.each do |user| %><tr>
   <td><%= attachment_image_tag user, :profile_image, :fill, 40, 40, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg",size:'40x40' %></td>
      <td><%= user.name %></td>
      <td><%=link_to "Show", user_path(user.id) %></tr>
   <% end %>
  </tbody>
</table>

     </div>
    </div>
   </div>